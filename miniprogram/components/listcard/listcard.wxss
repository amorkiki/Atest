/* miniprogram/components/listcard/listcard.wxss */
.listcard{
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 30rpx;
  width: 700rpx;
  height: 220rpx;
  background-color: #fafafa;
  border-radius: 20rpx;
  padding: 0 40rpx;
}
.list-top{
  display: flex;
  justify-content: space-between;
  height: 90rpx;
  font-size: 35rpx;
  border-bottom: 2rpx solid #CCDAFC;
}
.titleName{
  height: 55rpx;
  line-height: 55rpx;
  margin: 15rpx 5rpx;
  padding: 5rpx 20rpx;
  /* background-color: #fff; */
  color: #7A7AF7;
  border-radius: 25rpx;
  box-shadow: 2rpx 3rpx 3rpx rgba(225, 225, 225, .5);
}
.add-icon {
  margin: 15rpx;
  height: 65rpx;
  width: 65rpx;
  /* background-color: #fff; */
  border-radius: 35rpx;
  /* box-shadow: 2rpx 5rpx 3rpx rgba(225, 225, 225, .5); */
}
.add-icon image{
  width: 100%;
  height: 100%;
}
.list-body{
  display: flex;
  justify-content: space-between;
}
.body-details{
  display: flex;
  flex-direction: column;
  margin: 15rpx 0;
}
.detail-body{
  display: -webkit-box;  /*设置为弹性盒子*/
  -webkit-line-clamp: 2;  /*最多显示5行*/
  overflow: hidden;  /*超出隐藏*/
  text-overflow: ellipsis;  /*超出显示为省略号*/
  -webkit-box-orient: vertical;
  word-break: break-all;  /*强制英文单词自动换行*/
  color: #8a8a8a;
  font-size: 28rpx;
}
.body-right{
  margin: 30rpx 10rpx 0 0;
}
.body-right image{
  height: 60rpx;
  width: 60rpx;
}
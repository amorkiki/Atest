/* miniprogram/components/editor/editor.wxss */

.container {
  box-sizing: border-box;
  width: 720rpx;
  margin: 20rpx auto;
  border-radius:30rpx;
}
.ql-container {
  box-sizing: border-box;
  border-radius:30rpx;
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
}
.ql-container .ql-active {
  color: #F8C8B9;
}
.toolbar {
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #CCDAFC;
  box-shadow: 2rpx -2rpx 6rpx 7rpx rgba(0,0,0,.1);
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
}
.toolbar image{
  width: 55rpx;
  height: 55rpx;
}

<!--miniprogram/components/inputform/inputform.wxml-->
<view class="addbox">
    <form action="">
      <view>书名：</view>
      <view class="input-info">
        <input auto-focus="{{true}}" placeholder="请添加书名..."/>
      </view>
      <view>作者：</view>
      <view class="input-info">
        <input placeholder="请添加作者..."/>
      </view>
      <view>出版社：</view>
      <view class="input-info">
        <input placeholder="请添加出版社..."/>
      </view>
      <view>ISBN：</view>
      <view class="input-info">
        <input placeholder="请添加ISBN号码..."/>
      </view>
      <view>类型：（点击勾选图书类目）</view>
      <view class="input-info">
        <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
          <view class="picker">
           当前选择：{{array[index]}}
         </view>
     </picker>
      </view>
      <view>总页数：</view>
      <view class="input-info">
        <input placeholder="请输入本书总页数..."/>
      </view>
    </form>
  </view>
  <button class="submit-btn">保存信息</button>
  <button class="reset-btn">信息重置</button>
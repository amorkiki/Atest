/* pages/me/me.wxss */
@import '../../style/guide.wxss';
.me-header{
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 350rpx;
  background-color: #CCDAFC;
}
.me-avatar{
  position: absolute;
  left: 50rpx;
  bottom: 80rpx;
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  border: 2px solid rgba(195,207,224,.4);
}
.me-avatar image{
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 65rpx;
}
.me-name{
  height: 50rpx;
  position: absolute;
  left: 220rpx;
  bottom: 110rpx;

}
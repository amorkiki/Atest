/* miniprogram/pages/login/login.wxss */
.login-page{
  position: relative;
  width: 100%;
  height: 100vh;
  background: url(https://tva1.sinaimg.cn/large/0081Kckwly1gkq1mtzw8ij30az0jt7kf.jpg) no-repeat;
  opacity:0.7;
}
.login-box{
  box-sizing: border-box;
  position: absolute;
  left: 15%;
  top: 40%;
  height: 30vh;
  width: 500rpx;
}
.inputView{
  display: block;
  border-bottom: 2rpx solid black;
  height: 90rpx;
}
.inputText{
  width: 80%;
  height: 100%;
  text-align: center;
  line-height: 90rpx;
  color: black;
  font-weight: 400;
}
.login-btn{
  position: absolute;
  bottom: 50vh;
  left: 27vw;
  width: 300rpx;
  height: 50rpx;
  opacity: .7;
}
.lgbtn{
  /* background-color: rgba(225,225,225,.1); */
  border:2rpx solid rgba(225,225,225,.5);
  box-shadow: 2rpx 3rpx 6rpx 6rpx rgba(225,225,225,.7);
}
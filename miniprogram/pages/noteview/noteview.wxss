/* miniprogram/pages/noteview/noteview.wxss */
@import '../../style/guide.wxss';

.note{
  box-sizing: border-box;
  padding: 30rpx;
  margin: 30rpx auto;
  width: 700rpx;
  height: 1000rpx;
  border-radius: 30rpx;
  box-shadow: 2rpx 3rpx 6rpx 5rpx rgba(225,225,225,.5);
  color:#8a8a8a;

}
.note-title{
  display: flex;
  justify-content: space-between;
  border-bottom: 3rpx solid #CCDAFC;
  padding: 20rpx;
}
text:nth-child(2){
  font-size: 30rpx;
}
.note-body{
  margin-top: 30rpx;
  font-size: 30rpx;
}